.unity-ecs-inspector--entity-header
{
    padding-top: 8px;
    padding-bottom: 8px;
    padding-left: 15px;
    padding-right: 5px;
    flex-direction:row;
    border-bottom-width: 1px;
}

.unity-ecs-inspector--entity-header-name
{
    flex-grow:1;
    border-right-width: 5px;
    border-left-width: 5px;
}

.unity-ecs-inspector--entity-header-toggle
{
    bottom: 1px;
}

.unity-ecs-inspector--entity-header-icon
{
    width: 16px;
    height: 16px;
    right: 4px;
}
